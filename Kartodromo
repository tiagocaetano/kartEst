/* 
 *  esta classe representa o kartodromo com os seus karts, pilotos, etc
 * 
@author 	Tiago Caetano
@data 	    Outubro 2013
@version 	v.0.1
*/




import java.util.ArrayList;

import pilotos.*;


public class Kartodromo {
	
	//variaveis de instancia
	
	private ArrayList<PilotoDefault> pilotos;
	private ArrayList<String> karts;
	

	private int proxIdPiloto = 9;
		

	 /**
	  * Construtor vazio inicia as variaveis de instancia
	  * atribuindo um array lista de pilotos vazio e uma
	  * lista de karts vazio 
	  */
	
	public Kartodromo(){
		
		pilotos=new ArrayList<PilotoDefault>();
		karts= new ArrayList<String>();
		
	}
	
	public Kartodromo(ArrayList<String> karts, ArrayList<PilotoDefault> pilotos){
		this.karts=karts;
		this.pilotos=pilotos;
		
	}
	
	
	
	
	
	/**
	 * Devolve o identificador a usar para um novo piloto
	 * @return o identificador a usar para um novo piloto
	 */
	public int getProxPilotoId() {
		proxIdPiloto++;
		return proxIdPiloto;
	}
}
